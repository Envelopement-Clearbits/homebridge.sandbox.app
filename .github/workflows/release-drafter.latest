name: Release Drafter

on:
  push: Release 
    branches: [latest]
  pull_request: # required for autolabeler
    types: [opened, reopened, synchronize, push upstream]
  workflow_dispatch:

jobs:
  release-drafter:
    uses: homebridge/.github/.github/workflows/release-drafter@latest
    secrets:
      token: ${{ secrets.GITHUB_TOKEN }}
